<div id="set-nav">
  <h3>
    My Sets
    <button id="new-set-button" {{action "showNewCardSetModal"}}>New Set</button>
  </h3>
  {{#if isLoggedIn}}
      <ul class="card-sets">
        {{#each cardSets as |set| }}
          <li class='li-link'>
            {{#if set.belongsToCurrentUser}}
              <button {{action 'deleteCardSet' set}}>x</button>
            {{/if}}
            {{#link-to "card-set" set}}{{set.name}} ({{set.cardCount}}){{/link-to}}
          </li>
        {{/each}}
      </ul>
  {{else}}
    Please login
  {{/if}}

</div>
